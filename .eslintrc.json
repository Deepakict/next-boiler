{
  "extends": [
    "./node_modules/gts/",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "node/no-extraneous-import": [
      "error",
      {
        "allowModules": [
          "rxjs"
        ]
      }
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": [
          "@storybook/react",
          "@storybook/testing-library"
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
